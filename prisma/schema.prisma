// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id @default(cuid())
  username      String          @unique
  email         String          @unique
  password      String
  emailVerified DateTime?
  image         String?
  sessions      Session[]
  workspaceUser WorkspaceUser[]
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  expires      DateTime
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Workspace {
  id            String          @id @default(cuid())
  name          String
  createdAt     DateTime        @default(now())
  workspaceUser WorkspaceUser[]
  project       Project[]
}

model WorkspaceUser {
  id                   String                 @id @default(cuid())
  workspaceId          String
  workspace            Workspace              @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  userId               String
  user                 User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
  role                 Role
  projectWorkspaceUser ProjectWorkspaceUser[]
  ticketSubmitter      TicketSubmitter[]
  ticketDeveloper      TicketDeveloper[]
  comment              Comment[]

  @@unique(fields: [workspaceId, userId])
}

enum Role {
  ADMIN
  MANAGER
  DEVELOPER
}

model Project {
  id                   String                 @id @default(cuid())
  name                 String
  description          String?
  workspaceId          String
  workspace            Workspace              @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  createdAt            DateTime               @default(now())
  projectWorkspaceUser ProjectWorkspaceUser[]
  ticket               Ticket[]

  @@unique(fields: [id, workspaceId])
}

model ProjectWorkspaceUser {
  id              String        @id @default(cuid())
  projectId       String
  project         Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  workspaceUserId String
  workspaceUser   WorkspaceUser @relation(fields: [workspaceUserId], references: [id], onDelete: Cascade)

  @@unique(fields: [projectId, workspaceUserId])
}

model Ticket {
  id                String            @id @default(cuid())
  title             String
  description       String?
  ticketSubmitterId String            @unique
  ticketSubmitter   TicketSubmitter   @relation(fields: [ticketSubmitterId], references: [id], onDelete: Cascade)
  ticketDeveloper   TicketDeveloper[]
  projectId         String
  project           Project           @relation(fields: [projectId], references: [id], onDelete: Cascade)
  priority          Priority
  status            Status
  type              Type
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @default(now())
  ticketComment     TicketComment[]
}

model TicketSubmitter {
  id          String        @id @default(cuid())
  ticket      Ticket?
  submitterId String
  submitter   WorkspaceUser @relation(fields: [submitterId], references: [id], onDelete: Cascade)
}

model TicketDeveloper {
  id          String        @id @default(cuid())
  ticketId    String
  ticket      Ticket        @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  developerId String
  developer   WorkspaceUser @relation(fields: [developerId], references: [id], onDelete: Cascade)

  @@unique(fields: [ticketId, developerId])
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum Status {
  OPEN
  CLOSED
}

enum Type {
  BUG
  ISSUE
  ERROR
  FEATURE
  OTHER
}

model Comment {
  id            String          @id @default(cuid())
  comment       String
  authorId      String
  author        WorkspaceUser   @relation(fields: [authorId], references: [id])
  createdAt     DateTime        @default(now())
  ticketComment TicketComment[]
}

model TicketComment {
  id        String  @id @default(cuid())
  ticketId  String
  ticket    Ticket  @relation(fields: [ticketId], references: [id])
  commentId String
  comment   Comment @relation(fields: [commentId], references: [id])
}
